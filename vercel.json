{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/:path*"
    }
  ],
  "builds": [
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    },
    {
      "src": "backend/index.js", 
      "use": "@vercel/node"
    }
  ]
 
}
