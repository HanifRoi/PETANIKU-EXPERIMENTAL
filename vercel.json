{
    "version": 2,
    "builds": [
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": { "includeFiles": ["dist/**"] }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/dist/index.html"
      }
    ]
  }
  